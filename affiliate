<body>
  <div class="message">
    <h2>Redirecting you to the best offer...</h2>
    <div class="spinner"></div>
    <p>If you are not redirected automatically, please <a id="manualLink" href="#">click here</a>.</p>
  </div>

  <script>
    // ✅ List of rotating offer links
    const offerLinks = [
      "https://ouo.io/LmmmZ1",
      "https://ouo.io/CslAUAA",
      "https://ouo.io/rjdjAqz",
      "https://ouo.io/0RHZRF",
      "https://ouo.io/yY7E49",
      "https://ouo.io/9a787H",
      "https://ouo.io/N5wbda",
      "https://salvageapplet.com/nd22xdaen?key=3e773a60cb5bfdf4d369aa9e86a3131d",
      "https://www.revenuecpmgate.com/quqv84cs?key=28e501f07d1d6418681d7696d2c582ee"
    ];

    // ✅ Random redirect function with fallback
    function redirectUser() {
      let index = Math.floor(Math.random() * offerLinks.length);
      let selected = offerLinks[index];
      window.location.href = selected;

      // fallback if redirect fails after 5 seconds
      setTimeout(() => {
        index = (index + 1) % offerLinks.length;
        window.location.href = offerLinks[index];
      }, 5000);
    }

    document.getElementById("manualLink").addEventListener("click", redirectUser);
    window.onload = redirectUser;
  </script>
